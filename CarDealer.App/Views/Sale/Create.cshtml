@model CreateSaleModel

@{
    ViewData["Title"] = "Create Sale";
}
<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" class="form-horizontal" action="/sales/confirm">
            <div class="form-group">
                <label asp-for="Customer"></label>
                <select asp-for="Customer" asp-items="@Model.Customers" required class="form-control"></select>
                <span asp-validation-for="Customer" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car"></label>
                <select asp-for="Car" asp-items="@Model.Cars" required class="form-control"></select>
                <span asp-validation-for="Car" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount"></label>
                <select asp-for="Discount" required class="form-control">
                    <option value="0"> 0%</option>
                    <option value="5"> 5%</option>
                    <option value="10"> 10%</option>
                    <option value="15"> 15%</option>
                    <option value="20"> 20%</option>
                    <option value="25"> 25%</option>
                    <option value="30"> 30%</option>
                    <option value="35"> 35%</option>
                </select>
                <span asp-validation-for="Discount" class="form-text text-danger"></span>
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>
