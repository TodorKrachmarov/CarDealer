@model ReviewSaleModel

@{
    ViewData["Title"] = "Review Sale";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal" action="/sales/add">
            <div class="form-group">
                <label asp-for="CustomerName"></label>
                <input asp-for="CustomerName" disabled />
            </div>
            <div class="form-group">
                <label asp-for="CarName"></label>
                <input asp-for="CarName" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Discount"></label>
                <input  asp-for="Discount" disabled value="@Model.Discount" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" disabled />
            </div>
            <div class="form-group">
                <label asp-for="FinalPrice"></label>
                <input asp-for="FinalPrice" disabled />
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Finalize" />
                <a href="/sales/all" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>

