@model AddCarModel

@{
    ViewData["Title"] = "Create Car";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="Make"></label>
                <input asp-for="Make" required class="form-control" />
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" required class="form-control" />
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance"></label>
                <input asp-for="TravelledDistance" class="form-control" />
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartsIds">Supplier:</label>
                <select asp-for="PartsIds" asp-items="@Model.Parts" multiple="multiple" required class="form-control">
                </select>
                <span asp-validation-for="PartsIds" class="form-text text-danger"></span>
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Add Car" />
            </div>
        </form>
    </div>
</div>
